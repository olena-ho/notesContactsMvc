@model IEnumerable<NotesContacts.Web.Models.Note>
@{
    ViewData["Title"] = "Notes";
}
<h1>Notes</h1>
<p><a asp-action="Create" class="btn btn-primary">Create Note</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model)
        {
            <tr>
                <td>@n.Title</td>
                <td>@n.CreatedAt.LocalDateTime</td>
                <td>@(n.Tags is { Length: > 0 } ? string.Join(", ", n.Tags) : "-")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@n.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@n.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@n.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
