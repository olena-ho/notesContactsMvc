@model IEnumerable<NotesContacts.Web.Models.Contact>
@{
    ViewData["Title"] = "Contacts";
}
<h1>Contacts</h1>
<p><a asp-action="Create" class="btn btn-primary">Create Contact</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Mobile</td>
                <td>@c.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
